pipeline {
    agent any 
    
    environment {
        REGISTRY = "localhost:5000"
        IMAGE_NAME = "sample-app"
        IMAGE_TAG = "v1.0.${env.BUILD_NUMBER}" 
        // We define the name of our running production container here
        PROD_CONTAINER_NAME = "sample-app-prod"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm 
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo "ðŸ”¨ Building Image: ${REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
                    sh "docker build -t ${REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} ."
                    sh "docker tag ${REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} ${REGISTRY}/${IMAGE_NAME}:latest"
                }
            }
        }
        
        stage('Push to Registry') {
            steps {
                script {
                    echo "ðŸ“¦ Pushing Artifacts to Local Registry..."
                    sh "docker push ${REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
                    sh "docker push ${REGISTRY}/${IMAGE_NAME}:latest"
                }
            }
        }

        stage('Deploy to Production') {
            steps {
                script {
                    echo "ðŸš€ Deploying ${IMAGE_TAG} to Production..."
                    
                    // 1. Stop the old container (|| true prevents the pipeline from failing on the very first run when no container exists)
                    sh "docker stop ${PROD_CONTAINER_NAME} || true"
                    
                    // 2. Remove the old container
                    sh "docker rm ${PROD_CONTAINER_NAME} || true"
                    
                    // 3. Start the new container, mapping port 8081 to your laptop
                    sh "docker run -d --name ${PROD_CONTAINER_NAME} -p 8081:8081 ${REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
            sh "docker rmi ${REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} || true"
            sh "docker rmi ${REGISTRY}/${IMAGE_NAME}:latest || true"
        }
    }
}
